{
  "manifest_version": 3,
  "name": "NeoExamShield",
  "version": "1.20",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "commands"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "send-to-gemini": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Send copied text to Gemini API"
    }
  },
  "icons": {
    "48": "images/neoexs.png"
  },
  "action": {
    "default_icon": "images/neoexs.png",
    "default_title": "NeoExamShield"
  }
}
